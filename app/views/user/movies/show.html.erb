<div class="content">
  <div class="movie_detial">
    <div class="movie_left">
      <%= attachment_image_tag @movie, :image %>
      <%= @movie.title %>
      <%= @movie.created_year %>
      <%= @movie.genre_id_i18n %>
      <%= @movie.director %>
      <%= @movie.cast %>
    </div>
    <div class="movie_right">
      <%= @movie.introduction %>
    </div>
  </div>
  <% @reviews.each do |review| %>
<div class="relative-post-evaluation">
  <%= review.user.nickname %>
  <span id="star-rate-<%= review.id %>"></span>
  <script>
    $('#star-rate-<%= review.id %>').raty({
      size: 36,
      starOff: "<%= asset_path('star-off.png') %>",
      starOn: "<%= asset_path('star-on.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      half: true,
      readOnly: true,
      score: <%= review.score %>,
    });
  </script>
  <%= review.content %>
</div>
  <% end %>
  <%= link_to "レビューを投稿する", new_review_path(movie_id: @movie) %>

</div>