
<h5><%= @review.user.nickname %></h5>
<div class="review">
   <div class="relative-post-evaluation">
          <%= @review.user.nickname %>
          <%= @review.movie.title %>,
          <%= @review.movie.created_year %>,
          <%= @review.movie.genre_id %>
          <span id="star-rate-<%= @review.id %>"></span>
          <script>
          $('#star-rate-<%= @review.id %>').empty();
            $('#star-rate-<%= @review.id %>').raty({
              size: 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn: "<%= asset_path('star-on.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= @review.score %>,
            });
          </script><br>
          <%= @review.content %>
        </div>
      </div>
<%= link_to "投稿レビューをすべて見る", user_path(@review), class: "btn btn-success" %>

<% @comments.each do |comment| %>
  <%= comment.user.nickname %>
  <%= comment.created_year %>
  <%= comment.content %>
<% end %>

<%= link_to "コメントする", new_comment_path, class: "btn btn-success" %>