              <li class="nav-item active"><%= link_to "ログイン", new_user_session_path, class: "link"  %></li>
            <% end %>
          </ul>
          </div>
        </div>
      </nav>
      <!--font awesome読み込む-->
      <div class="text-right">
        <input type="text" placeholder="Search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </div>

      </div>

    </header>

    <main>
      <%= yield %>
